<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.soft.alhaddadsoft.doughttobelieve.MainActivity"
    android:background="@drawable/mainactivitycover">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:fillViewport="false"
        android:focusable="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout"
            android:weightSum="1"
            android:layout_below="@+id/textView">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفصل الأول الله"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفصل الثاني الجسد"
                android:id="@+id/button2"
                android:layout_alignTop="@+id/button3"
                android:layout_toLeftOf="@+id/button"
                android:layout_toStartOf="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفصل الثالث الروح"
                android:id="@+id/button3"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:layout_alignBottom="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفصل الرابع العدل الأزلي"
                android:id="@+id/button4"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:layout_alignBottom="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفصل الخامس لماذا العذاب..؟"
                android:id="@+id/button5"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:layout_alignBottom="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفصل السادس ماذا قالت لي الخلوة..؟"
                android:id="@+id/button6"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:layout_alignBottom="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفصل السابع التوازن العظيم"
                android:id="@+id/button7"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:layout_alignBottom="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفصل الأخير المسيخ الدجال"
                android:id="@+id/button8"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:layout_alignBottom="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="محتويات الكتاب"
        android:id="@+id/textView"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_below="@+id/imageView" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:background="@drawable/uppercover"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
